# ~~~~~~~~~~~~~~~ #
# General hotkeys #
# ~~~~~~~~~~~~~~~ #

# Programs
super + Return
	st
super + Space
	dmenu_run -c -l 7 -h 30
    
# Brightness 
XF86XK_MonBrightnessUp
    light -A 10

XF86XK_MonBrightnessDown
    light -U 10

XF86XK_KbdBrightnessUp
    light -As "sysfs/leds/smc::kbd_backlight" 20

XF86XK_KbdBrightnessDown
    light -Us "sysfs/leds/smc::kbd_backlight" 20

# Audio
XF86XK_AudioLowerVolume
    amixer sset Master 5%-

XF86XK_AudioRaiseVolume
    amixer sset Master 5%+

XF86XK_AudioMute
    amixer sset Master toggle

# Reload config
super + Escape
	pkill -USR1 -x sxhkd

# ~~~~~~~~~~~~~ #
# berry hotkeys #
# ~~~~~~~~~~~~~ #

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9}
    berryc switch_workspace {0-9}

super + shift + {1-9}
    berryc send_to_workspace {0-9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super +  p
    berryc snap_right

super + o 
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus
