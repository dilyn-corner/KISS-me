#!/bin/sh -e

export DESTDIR="$1"

# Hide a very obnoxious warning.
export CFLAGS="$CFLAGS -Wno-enum-conversion"

meson \
    --prefix=/usr \
    --buildtype=release \
    -Dps=enabled \
    -Dtee=enabled \
    -Dglib=disabled \
    -Dtests=disabled \
    -Dtrace=disabled \
    -Dgl-backend=glesv2 \
    . build

ninja -C build
ninja -C build install

# Install the license
install -Dm755 COPYING-MPL-1.1 "$1/usr/share/LICENSES/cairo.license"
