#!/bin/sh -e

./configure \
    --prefix=/usr \
    --with-threads \
    --with-history \
    --without-python \
    --without-icu \
    --disable-shared

gmake CFLAGS="$CFLAGS -fPIC" LDFLAGS="$LDFLAGS --static"
gmake DESTDIR="$1" install

# Install the license
install -Dm755 COPYING "$1/usr/share/LICENSES/libxml2.license"
