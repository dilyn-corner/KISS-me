#!/bin/sh -e

export DESTDIR="$1"

meson \
    --prefix=/usr \
    --buildtype=release \
    -Damdgpu=true \
    -Dradeon=true \
    -Dintel=false \
    -Dlibkms=false \
    -Dvmwgfx=false \
    -Dnouveau=false \
    . build

ninja -C build
ninja -C build install

# Install the license
install -Dm644 LICENSE "$1/usr/share/LICENSES/libdrm.license"
