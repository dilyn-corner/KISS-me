#!/bin/sh -e 

./configure \
        --prefix=/usr \
        --with-intl=system-icu \
        --without-npm \
        --shared-openssl \
        --shared-zlib \
        --shared-libuv \
        --experimental-http-parser \
        --shared-cares \
        --shared-nghttp2

make 

make DESTDIR="$1" install
install -Dm644 LICENSE "$1"/usr/share/licenses/nodejs/LICENSE
