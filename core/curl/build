#!/bin/sh -e

./configure \
    --prefix=/usr \
    --enable-ipv6 \
    --enable-unix-sockets \
    --enable-hidden-symbols \
    --disable-ares \
    --disable-ldap \
    --disable-manual \
    --without-icu \
    --without-libpsl \
    --without-libidn \
    --without-libidn2 \
    --without-librtmp \
    --with-pic \
    --with-openssl \
    --with-ca-fallback

make curl_LDFLAGS=-all-static
make DESTDIR="$1" install

# Install the license
install -Dm755 COPYING "$1/usr/share/LICENSES/curl.license"
