#!/bin/sh -e

cd bmake

patch -p1 < ../separate-tests.patch

export CFLAGS="$CFLAGS -static"
export LDFLAGS="$LDFLAGS -static"

./boot-strap \
    --with-default-sys-path=/usr/share/mk \
    op=build

INSTALL=install \
./boot-strap \
    --prefix=/usr \
    --with-mksrc=/usr/share/mk \
    --install-destdir="$1" \
    op=install

rm -rf "$1/usr/share/man/cat1"
install -Dm644 bmake.1 "$1/usr/share/man/man1/bmake.1"
ln -s bmake "$1/usr/bin/make"

# Install the license
install -Dm644 LICENSE "$1/usr/share/LICENSES/bmake.license"
