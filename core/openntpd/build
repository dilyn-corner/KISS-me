#!/bin/sh -e

./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --with-privsep-user=openntpd \
    --with-cacert=/etc/ssl/cert.pem

make
make DESTDIR="$1" install

# Install the service
install -Dm755 ntpd.run "$1/etc/sysmgr/ntpd"

# Install the license
install -Dm644 COPYING "$1/usr/share/LICENSES/openntpd.license"
