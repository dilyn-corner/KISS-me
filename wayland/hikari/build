#!/bin/sh -e

# Because mesa is dynamic we can't have this
CFLAGS=$(printf %s "$CFLAGS" | sed 's/-static//g')

for patch in *.patch; do 
    patch -p1 < "$patch"
done

make \
    PREFIX=/usr \
    ETC_PREFIX=/ \
    WITH_POSIX_C_SOURCE=YES \
    WITH_LAYERSHELL=YES \
    WITH_SCREENCOPY=YES

make PREFIX=/usr ETC_PREFIX=/ DESTDIR="$1" install
