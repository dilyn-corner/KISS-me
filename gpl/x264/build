#!/bin/sh -e

patch -p1 < x264-no-bash.patch

CC=cc CXX=c++ ./configure \
    --prefix=/usr \
    --disable-swscale \
    --enable-shared \
    --enable-static \
    --enable-pic \
    --enable-lto

gmake LDFLAGS="$LDFLAGS -static"
gmake DESTDIR="$1" install

# Install the license
install -Dm755 COPYING "$1/usr/share/LICENSES/x264.license"
