#!/bin/sh -e
# We don't want expansion
# shellcheck disable=2016

./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --with-udev-rules-dir=/usr/lib/udev/rules.d \
    --disable-bat \
    --disable-nls \
    --disable-xmlto \
    --disable-alsaconf

make
make DESTDIR="$1" install

# Install the license
install -Dm644 COPYING "$1/usr/share/LICENSES/alsa-utils.license"
