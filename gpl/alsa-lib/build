#!/bin/sh -e

for patch in *.patch; do
    patch -p1 < "$patch"
done

# Fix a missing include
sed -i '/<dirent.h>/a #include <limits.h>' src/ucm/ucm_exec.c

./configure \
    --prefix=/usr \
    --without-debug

make 
make DESTDIR="$1" install

# Install the license
install -Dm755 COPYING "$1/usr/share/LICENSES/alsa-lib.license"
